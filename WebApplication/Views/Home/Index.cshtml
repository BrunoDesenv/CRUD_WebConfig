<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
@model List<WebApplication.Models.Configuracao>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<a href="@Url.Action("DePara")">

  <span class="glyphicon glyphicon-indent-right"></span>

</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Chave</th>
            <th>Valor</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var config in Model)
        {
            <tr class="trClick" data-config=config>
                <td>@config.Chave</td>
                <td>@config.Valor</td>
                <td>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Editar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal" id="abrir">
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".trClick").click(function () {
            debugger;
            var DadosConfiguracao = $(this).attr('data-config');
            $("#abrir").load("/Home/Editar/" + DadosConfiguracao);
            $("#abrir").modal();
        })
    })
</script>